{
  "manifest_version": 3,
  "name": "LeetCode Friends",
  "version": "1.0",
  "description": "Add and manage friends on LeetCode",
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode.com/*"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Friends"
  }
}
